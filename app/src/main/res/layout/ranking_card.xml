<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="4dp"
    app:cardBackgroundColor="#66000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/nameHint"
            app:layout_constraintStart_toStartOf="@+id/nameHint"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="wojtek" />

        <TextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/winHint"
            app:layout_constraintStart_toStartOf="@+id/winHint"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/draws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/drawsHint"
            app:layout_constraintStart_toStartOf="@+id/drawsHint"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2" />

        <TextView
            android:id="@+id/loses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/LosesHints"
            app:layout_constraintStart_toStartOf="@+id/LosesHints"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3" />

        <TextView
            android:id="@+id/nameHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/winHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/winHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/drawsHint"
            app:layout_constraintStart_toEndOf="@+id/nameHint"
            app:layout_constraintTop_toBottomOf="@+id/player2" />

        <TextView
            android:id="@+id/drawsHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draws"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/LosesHints"
            app:layout_constraintStart_toEndOf="@+id/winHint"
            app:layout_constraintTop_toBottomOf="@+id/draws" />

        <TextView
            android:id="@+id/LosesHints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loses"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/drawsHint"
            app:layout_constraintTop_toBottomOf="@+id/loses" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>